<li {{action "open"}}>
  <p><strong>{{book.title}}</strong></p>
  <p><em>by</em> {{book.author.name}}</p>
  {{#link-to 'author' book.author class="author"}}{{book.author.name}}{{/link-to}}
</li>

{{#if isShowingModal}}
  {{#modal-dialog close="close" clickOutsideToClose=true}}
    <div class="modal">
      <h3>Purchase confirmation</h3>
      <p>You want to buy <strong>{{book.title}}</strong> by {{book.author.name}}</p>

      <button {{action "close"}}>Purchase for ${{book.price}}!</button>

      <p><em>Thank you! We will e-mail you your e-book.</em></p>
    </div>
    {{/modal-dialog}}
{{/if}}
